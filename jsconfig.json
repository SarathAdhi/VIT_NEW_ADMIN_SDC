{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"],
      "@layouts/*": ["common/layouts/*"],
      "@elements/*": ["common/components/elements/*"],
      "@components/*": ["common/components/*"],
      "@hoc/*": ["common/hoc/*"],
      "types/*": ["common/types/*"],
      "@backend/*": ["backend/*"],
      "@apis/*": ["backend/apis/*"],
      "@models/*": ["backend/models/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
